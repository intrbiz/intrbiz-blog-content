<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- The index view -->
<fragment xmlns="com.intrbiz.balsa" title="Welcome">
    <div class="recent_posts">
        <h3>Recent Posts</h3>
        <ul>
            <data-set var="post" value="#{posts}">
                <li><a href="#{'post/' + post.name}">#{post.title}</a></li>
            </data-set>
        </ul>
    </div>
    <div class="post">
        <h2>Hey, I'm Chris</h2>
        <p>
            Welcome to my little space of the web.
        </p>
        <p>
            This place hasn't had much attention for a while, but I'm getting back into updating it over the next few weeks.
        </p>
    </div>
</fragment>
